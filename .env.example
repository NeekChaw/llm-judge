# AI Benchmark V2 环境变量配置示例
# 复制此文件为 .env.local 并填入实际的配置值

# ====================================
# 数据库配置 (Supabase)
# ====================================
SUPABASE_URL=your_supabase_project_url
SUPABASE_ANON_KEY=your_supabase_anon_key

# Next.js 公开环境变量 (浏览器可访问)
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
NEXT_PUBLIC_SUPABASE_ROLE_KEY=your_supabase_role_key

# Supabase Storage配置
SUPABASE_STORAGE_BUCKET=ai-benchmark
STORAGE_PROVIDER=supabase

# ====================================
# Redis配置 (任务队列和缓存)
# ====================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=ai_benchmark_redis_2025
REDIS_DB=0
# 强制使用真实Redis (生产环境设为true)
FORCE_REDIS=false

# ====================================
# LLM API密钥配置
# ====================================

# --- OpenAI ---
OPENAI_API_KEY=your_openai_api_key
OPENAI_BASE_URL=https://api.openai.com/v1

# --- Anthropic Claude ---
ANTHROPIC_API_KEY=your_anthropic_api_key
ANTHROPIC_BASE_URL=https://api.anthropic.com/v1

# --- 硅基流动 SiliconFlow ---
SILICONFLOW_API_KEY=your_siliconflow_api_key
SILICONFLOW_BASE_URL=https://api.siliconflow.cn/v1

# --- 火山引擎 (字节跳动/豆包) ---
VOLCENGINE_API_KEY=your_volcengine_api_key
VOLCENGINE_BASE_URL=https://ark.cn-beijing.volces.com/api/v3

# --- 智谱AI (GLM) ---
ZHIPU_API_KEY=your_zhipu_api_key
ZHIPU_BASE_URL=https://open.bigmodel.cn/api/paas/v4

# --- 阿里云 (通义千问) ---
ALI_API_KEY=your_ali_api_key
ALI_BASE_URL=https://dashscope.aliyuncs.com/compatible-mode/v1

# --- 月之暗面 (Kimi/Moonshot) ---
MOONSHOT_API_KEY=your_moonshot_api_key
MOONSHOT_BASE_URL=https://api.moonshot.cn/v1

# --- OpenRouter (多模型聚合) ---
OPENROUTER_API_KEY=your_openrouter_api_key
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# --- DeepSeek ---
DEEPSEEK_API_KEY=your_deepseek_api_key
DEEPSEEK_BASE_URL=https://api.deepseek.com/v1

# --- Google Gemini ---
GOOGLE_API_KEY=your_google_api_key
GOOGLE_BASE_URL=https://generativelanguage.googleapis.com/v1beta

# --- DMX API ---
DMX_API_KEY=your_dmx_api_key
DMX_BASE_URL=https://www.dmxapi.com/v1

# LLM通用配置 (可选 - 仅作为后备值)
# 通常不需要设置，系统会使用上面各提供商的特定配置
# LLM_BASE_URL=        # 全局后备Base URL（留空使用提供商特定URL）
# LLM_TIMEOUT=60000    # API超时时间（毫秒）
# DEFAULT_LLM_MODEL_ID=gpt-4  # 默认模型ID

# ====================================
# 代码沙箱配置 (E2B)
# ====================================
# E2B API密钥
E2B_API_KEY=your_e2b_api_key
# 沙盒超时时间 (毫秒，默认5分钟)
E2B_TIMEOUT_MS=300000
# 最大并发沙盒数量
E2B_MAX_CONCURRENT_SANDBOXES=10
# 沙盒会话清理间隔 (毫秒，默认1分钟)
E2B_SESSION_CLEANUP_INTERVAL=60000

# ====================================
# 应用配置
# ====================================
# 应用运行端口
PORT=3000
# 应用主机名
HOSTNAME=0.0.0.0
# 运行环境
NODE_ENV=production

# 公开URL配置
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:3000/api

# ====================================
# 性能和限制配置
# ====================================
# 任务并发限制
DEFAULT_CONCURRENT_LIMIT=5
# API超时时间 (毫秒)
DEFAULT_API_TIMEOUT=60000
# 最大重试次数
DEFAULT_MAX_RETRIES=3

# 任务处理器配置
TASK_PROCESSOR_MODE=auto
SCRIPT_CHECK_INTERVAL=5000
SCRIPT_CONCURRENT_LIMIT=10
SCRIPT_RETRY_DELAY=1000

# 文件上传限制
MAX_FILE_SIZE=10485760
MAX_FILE_COUNT=10
ALLOWED_MIME_TYPES=image/jpeg,image/png,image/gif,audio/mpeg,video/mp4

# ====================================
# 安全配置
# ====================================
# JWT密钥 (如果需要认证)
JWT_SECRET=your_jwt_secret_key
# API访问密钥 (可选)
API_ACCESS_KEY=your_api_access_key

# ====================================
# 监控和日志配置
# ====================================
# 启用详细日志
ENABLE_VERBOSE_LOGGING=true
# 日志级别 (error, warn, info, debug)
LOG_LEVEL=info

# ====================================
# 外部服务配置 (可选)  
# ====================================
# 邮件服务 (用于通知)
SMTP_HOST=your_smtp_host
SMTP_PORT=587
SMTP_USER=your_smtp_user
SMTP_PASSWORD=your_smtp_password

# Webhook通知URL
WEBHOOK_URL=your_webhook_url

# ====================================
# 其他配置
# ====================================
# 时区设置
TZ=Asia/Shanghai

# 禁用Next.js遥测
NEXT_TELEMETRY_DISABLED=1